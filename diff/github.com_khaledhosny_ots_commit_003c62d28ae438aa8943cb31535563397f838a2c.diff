diff --git a/src/gasp.cc b/src/gasp.cc
index 91e19e4f..1e2327f1 100644
--- a/src/gasp.cc
+++ b/src/gasp.cc
@@ -11,10 +11,10 @@
 
 #define DROP_THIS_TABLE(...) \
   do { \
-    delete file->gasp; \
-    file->gasp = 0; \
     OTS_FAILURE_MSG_(file, TABLE_NAME ": " __VA_ARGS__); \
     OTS_FAILURE_MSG("Table discarded"); \
+    delete file->gasp; \
+    file->gasp = 0; \
   } while (0)
 
