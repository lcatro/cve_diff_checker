From 9f969b94c4b4f310865455d36db207de6cffebca Mon Sep 17 00:00:00 2001
From: Randy Barlow <rbarlow@redhat.com>
Date: Wed, 30 Mar 2016 19:38:37 +0000
Subject: [PATCH] Use 4096 bits on the auth CA instead of 2048.

---
 server/bin/pulp-gen-ca-certificate | 10 ++++++----
 1 file changed, 6 insertions(+), 4 deletions(-)

diff --git a/server/bin/pulp-gen-ca-certificate b/server/bin/pulp-gen-ca-certificate
index 5eca2f6c38..f29d047d30 100755
--- a/server/bin/pulp-gen-ca-certificate
+++ b/server/bin/pulp-gen-ca-certificate
@@ -30,9 +30,10 @@ CN=`hostname --fqdn`
 ORG="PULP"
 
 mkdir -p $TMP
+chmod 700 $TMP
 
 # create CA key
-openssl genrsa -out $TMP/ca.key 2048 &> /dev/null
+openssl genrsa -out $TMP/ca.key 4096 &> /dev/null
 
 # create signing request
 openssl req \
@@ -52,12 +53,13 @@ openssl x509 \
   -out $TMP/ca.crt &> /dev/null
 
 # install
-cp $TMP/ca.key $CA_KEY
-cp $TMP/ca.crt $CA_CRT
+mv $TMP/ca.key $CA_KEY
+mv $TMP/ca.crt $CA_CRT
+rm $TMP/ca.req
 chown root:apache $CA_KEY
 chown root:apache $CA_CRT
 chmod 640 $CA_KEY
 chmod 640 $CA_CRT
 
 # clean
-rm -rf $TMP
\ No newline at end of file
+rmdir $TMP
