Subject: [PATCH] https://github.com/WWBN/AVideo/issues/3117 Make sure the
 livelink starts with http

---
 plugin/LiveLinks/proxy.php | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/plugin/LiveLinks/proxy.php b/plugin/LiveLinks/proxy.php
index 4495516113..d2c171b050 100644
--- a/plugin/LiveLinks/proxy.php
+++ b/plugin/LiveLinks/proxy.php
@@ -12,7 +12,7 @@
 /*
  * this file is to handle HTTP URLs into HTTPS
  */
-if (!filter_var($_GET['livelink'], FILTER_VALIDATE_URL) && preg_match("/^http.*/i", $_GET['livelink'])) {
+if (!filter_var($_GET['livelink'], FILTER_VALIDATE_URL) || !preg_match("/^http.*/i", $_GET['livelink'])) {
     echo "Invalid Link";
     exit;
 }
