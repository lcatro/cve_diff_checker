Date: Thu, 15 Apr 2021 20:00:14 +0200
Subject: [PATCH] Add scopes to configuration points

---
 package.json | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/package.json b/package.json
index 29e8136..02dae4a 100644
--- a/package.json
+++ b/package.json
@@ -52,12 +52,14 @@
                 "rpmspec.lint": {
                     "type": "boolean",
                     "default": true,
-                    "description": "Lint RPM spec files with rpmlint"
+                    "description": "Lint RPM spec files with rpmlint",
+                    "scope": "machine"
                 },
                 "rpmspec.rpmlintPath": {
                     "type": "string",
                     "default": "rpmlint",
-                    "description": "Path to 'rpmlint' command"
+                    "description": "Path to 'rpmlint' command",
+                    "scope": "machine"
                 }
             }
         }
