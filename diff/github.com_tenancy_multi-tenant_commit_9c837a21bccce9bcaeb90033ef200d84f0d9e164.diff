Subject: [PATCH] Trim slashes from request uri before redirecting (#1001)

---
 src/Middleware/HostnameActions.php | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/Middleware/HostnameActions.php b/src/Middleware/HostnameActions.php
index de5e0335..6578ec9c 100644
--- a/src/Middleware/HostnameActions.php
+++ b/src/Middleware/HostnameActions.php
@@ -95,7 +95,7 @@ protected function secure(Hostname $hostname, Request $request)
     {
         $this->emitEvent(new Secured($hostname));
 
-        return $this->redirect->secure($request->getRequestUri());
+        return $this->redirect->secure(ltrim($request->getRequestUri(), '/'));
     }
 
